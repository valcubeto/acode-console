{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "system",
    "moduleDetection": "force",
    "allowJs": true,
		"outFile": "out/main.js",

    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*.ts", "typings/**/*.d.ts"],
  "exclude": ["out", "node_modules"]
}